# Node Environment
NODE_ENV=production

# Server Port (Railway will provide this automatically)
PORT=4000

# Database Configuration
# Option 1: Use DATABASE_URL (Railway PostgreSQL format - RECOMMENDED)
DATABASE_URL=postgresql://user:password@host:port/database

# Option 2: Use individual variables (for local development)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_NAME=engnet_db

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRATION=7d

# CORS Configuration
# Multiple origins separated by comma
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# API Configuration
API_PREFIX=/api
API_VERSION=v1
